doctype html
html
  head
    title Payments for client
  body
    h1 #{t('payments.index.title')}
    #content
      br
        h2 #{t('payments.index.current_balance')} #{@result_balance}
        - unless @payments_list.empty?
          table.table
            tr
              th.name = t('payments.index.date')
              th.name = t('payments.index.price')
              th.name = t('payments.index.delete')
            - @payments_list.each_with_index do |payment, id|
              tr
                td.Date = payment.datetime.strftime("%B %d, %Y")
                td.Price = payment.price
                td.Cancel: button class="btn btn-primary btn-icon btn-round" onclick="document.location.replace('#{'payments/' + payment.id.to_s  + '/delete'}')" ‚ìç
        - else
            h4 #{t('payments.index.no_payments')}
input class="btn btn-primary" type="submit" value=t('payments.index.add') onclick="window.location='payments/create';"
.pagniation-wrapper align="center"
  = paginate @payments_list,
          previous_label: 'Previous', next_label: 'Next', inner_window: 1, outer_window: 0
