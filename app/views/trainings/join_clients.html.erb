<% if @clients.any? %>
  <% @clients.each do |client| %>

    <div class="ui raised very padded text container segment ">
      <h3 class="ui header"><%= client.full_name %></h3>
      <div class="field" style="margin-bottom: 10px">
        <div class="ui labeled input">
          <div class="ui label">$</div>
          <input type="number" min="0" placeholder="<%= client.price %>">
        </div>
      </div>
      <div class="field" style="margin-bottom: 20px">
        <% if @exercises.present? %>
          <select class="ui fluid search dropdown exercises-types-select" multiple="">
            <option value="">Exercises...</option>
            <% @exercises.each do |exe| %>
              <option value="<%= exe.id %>"><%= exe.name %></option>
            <%end %>
          </select>
        <% else %>
<!--          todo: redirect to page with create exercises_types-->
<!--          <a class="ui green button" href="<%#= new_client_path %>">Create client</a>-->
        <% end %>
      </div>


<!--      <div id="exercise_continer"></div>-->
<!--      <button class="ui green button" onclick="add_exercise()">Add Exercise</button>-->
    </div>
  <% end %>
<% end %>
